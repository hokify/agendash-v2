{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": [
      "es2019"
    ],
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "composite": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "isolatedModules": false,
    "declaration": true
  },
  "include": [
    "./public/app/js/*.js",
    "./bin/*.js",
    "./lib/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
